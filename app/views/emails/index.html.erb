<h1>Emails#index</h1>
<p>Find me in app/views/emails/index.html.erb</p>



  <div class="container">
  <div class="row">

  <ul id="email-list" class="list-group col-4">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to "Recevoir email", emails_path, method: "post", class: "btn btn-primary pull-top", :remote => true  %>
    </li>
  <% Email.all.each do  |email|%>

    <li class="list-group-item d-flex justify-content-between align-items-center">
       <%= email.id %> : <%= email.object %>
    </li>

    <% end %>
  </ul>

  <div class="container col-8">
    <div class="card border-primary mb-3" style="max-width: 100rem;">
      <div class="card-header text-center">@email.object</div>
      <div class="card-body">
        <p class="card-text text-center">@email.body</p>
      </div>
    </div>
   </div>

  </div>
</div>

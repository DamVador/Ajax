
  <div class="container">
  <div class="row">

  <ul id="email-list" class="list-group col-4">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to "Recevoir email", emails_path, method: "post", class: "btn btn-primary pull-top", :remote => true  %>
    </li>
  <% Email.all.each do  |email|%>

    <li id="<%=email.id%>" class="list-group-item d-flex justify-content-between align-items-center">
       <%= email.id %> :
       <%= link_to email.object, email_path(email.id), :remote => true %>

    </li>

    <% end %>
  </ul>

  <div id="email-body" class="container col-8">

   </div>

  </div>
</div>

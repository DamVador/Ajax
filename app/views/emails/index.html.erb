
  <div class="container">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to "Recevoir email", emails_path, method: "post", class: "btn btn-primary pull-top", :remote => true  %>
    </li>
  <div class="row">

  <ul id="email-list" class="list-group col-4 mb-3">

  <% Email.all.sort.reverse.each do  |email|%>
    <% if email.read == false %>
      <li id="<%=email.id%>" class="list-group-item d-flex justify-content-between align-items-center" style="background-color: yellow;">
         <%= email.id %> :
         <%= link_to email.object, email_path(email.id), :remote => true %>
      </li>
    <% else %>
        <li id="<%=email.id%>" class="list-group-item d-flex justify-content-between align-items-center">
           <%= email.id %> :
           <%= link_to email.object, email_path(email.id), :remote => true %>

        </li>
    <% end %>

    <% end %>

  </ul>

  <div id="email-body" class="container col-8">

   </div>

  </div>
</div>
